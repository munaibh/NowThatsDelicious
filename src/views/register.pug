extends layout

block content
  .inner
    form.form(action="/register" method="POST")
      h2 Register
      label(for="name") Name*
      input(type="text", id="name" name="name" value=(body && body.name))
      label(for="email") Email*
      input(type="email", id="email" name="email" value=(body && body.email))
      label(for="password") Password*
      input(type="password", id="password" name="password" value=value=(body && body.password))
      label(for="confirm-password") Repeat Password*
      input(type="password", id="confirm-password" name="confirm-password" value=value=(body && body.confirm-password))
      br
      input.button(type="submit" value="Register")
